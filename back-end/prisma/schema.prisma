generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Foto {
  id          Int         @id @default(autoincrement())
  titolo      String
  descrizione String
  immagine    String
  visibile    Boolean
  categorie   Categoria[] @relation("FotoCategoria")
}

model Categoria {
  id   Int    @id @default(autoincrement())
  nome String
  foto Foto[] @relation("FotoCategoria")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
